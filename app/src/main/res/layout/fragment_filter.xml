<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true">

        <!--    fragment_filter-->
        <TextView
            android:id="@+id/tvCategories"
            style="@style/text_style_filter"
            android:text="CATEGORIES"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvClearAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/trans"
            android:fontFamily="@font/yugothil"
            android:text="CLEAR ALL"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvCategories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvCategories" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategories">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/style_chip_filter"
                android:text="ALL"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrunch"
                style="@style/style_chip_filter"
                android:text="BRUNCH"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDinner"
                style="@style/style_chip_filter"
                android:text="DINNER"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBurger"
                style="@style/style_chip_filter"
                android:text="BURGERS"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipChinese"
                style="@style/style_chip_filter"
                android:text="CHINESE"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPizza"
                style="@style/style_chip_filter"
                android:text="PIZZA"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSalad"
                style="@style/style_chip_filter"
                android:text="SALADS"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSoup"
                style="@style/style_chip_filter"
                android:text="SOUPS"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBF"
                style="@style/style_chip_filter"
                android:text="BREAKFAST"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

        </com.google.android.material.chip.ChipGroup>


        <TextView
            android:id="@+id/tvDietary"
            style="@style/text_style_filter"
            android:text="DIETARY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipCategories" />

        <TextView
            android:id="@+id/tvClearAllDietary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/trans"
            android:fontFamily="@font/yugothil"
            android:text="CLEAR ALL"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDietary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDietary" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipDietary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDietary">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAny"
                style="@style/text_style_filter"
                android:text="ANY"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVeg"
                style="@style/text_style_filter"
                android:text="VEGETARIAN"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVegan"
                style="@style/text_style_filter"
                android:text="VEGAN"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGluten"
                style="@style/text_style_filter"
                android:text="GLUTEN-FREE"
                app:chipCornerRadius="5dp"
                app:textEndPadding="16dp"
                app:textStartPadding="16dp" />


        </com.google.android.material.chip.ChipGroup>


        <TextView
            android:id="@+id/tvPriceRange"
            style="@style/text_style_filter"
            android:text="PRICE RANGE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipDietary" />

        <TextView
            android:id="@+id/tvClearAllPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/trans"
            android:fontFamily="@font/yugothil"
            android:text="CLEAR ALL"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPriceRange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPriceRange" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipPriceRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:foregroundGravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceRange">

            <com.google.android.material.chip.Chip
                android:id="@+id/dollar1"
                style="@style/CustomChipChoice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yugothib"
                android:paddingHorizontal="20dp"
                android:text="$"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dollar2"
                style="@style/CustomChipChoice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yugothib"
                android:text="$$"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="101dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dollar3"
                style="@style/CustomChipChoice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yugothib"
                android:text="$$$"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dollar4"
                style="@style/CustomChipChoice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yugothib"
                android:text="$$$$"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dollar5"
                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yugothib"
                android:text="$$$$$"
                android:textSize="12sp" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnApplyFilters"
            android:text="APPLY FILTERS"
            android:letterSpacing=".15"
            android:textColor="@color/white"
            style="@style/style_btn_get_started"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:ignore="TextContrastCheck" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.82" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
