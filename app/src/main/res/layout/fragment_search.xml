<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSearchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/d10"
            android:layout_marginTop="0dp"
            android:text="@string/search_on_foodly"
            android:fontFamily="@font/yugothil"
            android:textColor="@color/body_text"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="@dimen/t14"
            android:drawablePadding="@dimen/d10"
            android:paddingHorizontal="@dimen/d10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableStartCompat="@drawable/ic_search_item" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/yugothil"
            android:text="@string/top_restaurants"
            android:textColor="@color/main_color"
            android:textSize="@dimen/t16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSearchView" />

        <TextView
            android:id="@+id/tvTopCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/yugothil"
            android:text="@string/top_categories"
            android:textColor="@color/active_color_1"
            android:textSize="@dimen/t16"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView17" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchTopRestaurants"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/d10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
