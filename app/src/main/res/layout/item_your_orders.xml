<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvOrderIndex"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:fontFamily="@font/yugothil"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOrderItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/yugothil"
        android:textStyle="bold"
        android:text="Cookie Sandwich"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tvOrderIndex"
        app:layout_constraintTop_toTopOf="@+id/tvOrderIndex" />

    <TextView
        android:id="@+id/tvOrderItemDesc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/yugothil"
        android:text="Shortbread, chocolate turtle cookies, and red velvet."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvOrderItemName"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderItemName" />

    <TextView
        android:id="@+id/tvOrderItemCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/yugothil"
        android:text="AUD$10"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#F8B64C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>